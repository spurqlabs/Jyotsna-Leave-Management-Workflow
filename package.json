{
  "name": "orangehrm-automation",
  "version": "1.0.0",
  "description": "BDD Test Automation Framework for OrangeHRM Leave Management using Playwright, Cucumber, and Node.js",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:headed": "HEADED=true cucumber-js",
    "test:smoke": "cucumber-js --tags '@smoke'",
    "test:regression": "cucumber-js --tags '@regression'",
    "test:negative": "cucumber-js --tags '@negative'",
    "test:parallel": "cucumber-js --parallel 2",
    "report": "node src/utils/reportGenerator.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write 'src/**/*.js'"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "bdd",
    "automation",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "@playwright/test": "^1.40.1",
    "allure-commandline": "^2.25.0",
    "allure-cucumberjs": "^2.15.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "cucumber-html-reporter": "^6.0.0",
    "fs-extra": "^11.2.0",
    "winston": "^3.11.0"
  }
}
